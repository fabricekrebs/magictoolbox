# Environment Configuration Template for MagicToolbox
# Copy this file to .env.development for local development
# Do NOT commit .env files with actual secrets!

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# Note: DB_NAME must match the database name in infra/modules/postgresql.bicep (currently 'magictoolbox')
DB_NAME=magictoolbox
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=52428800

# Azure Functions - Async File Processing
# Single base URL for all Azure Function endpoints
# Example: https://func-magictoolbox-dev-xyz.azurewebsites.net/api
# Tools append their endpoint: /pdf/convert, /video/rotate, etc.
AZURE_FUNCTION_BASE_URL=

# Optional: Enable/disable Azure Functions per tool
USE_AZURE_FUNCTIONS_PDF_CONVERSION=False

# Azure Storage (Production only)
# For production: Use AZURE_STORAGE_ACCOUNT_NAME with Managed Identity
# For local dev: Use AZURE_STORAGE_CONNECTION_STRING with Azurite
AZURE_STORAGE_ACCOUNT_NAME=
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
# AZURE_STORAGE_CONTAINER=media
# Local development with Azurite:
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=http;AccountName=devstorageaccount1;AccountKey=Eby8vdM02xNOcqFlqUwJPLlmEtlCDXJ1OUzFT50uSRZ6IFsuFq2UVErCz4I6tq/K1SZFPTOtr/KBHBeksoGMGw==;BlobEndpoint=http://127.0.0.1:10000/devstorageaccount1;

# Azure Key Vault (Production only)
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Insights (Production only)
