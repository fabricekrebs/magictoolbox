# Environment Configuration Template for MagicToolbox
# Copy this file to .env.development for local development
# Do NOT commit .env files with actual secrets!

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
DB_NAME=magictoolbox
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE=52428800

# Azure Storage (Production only)
# AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
# AZURE_STORAGE_CONTAINER=media

# Azure Key Vault (Production only)
# AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# Application Insights (Production only)
# APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key

# Email Configuration (Production)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key
# DEFAULT_FROM_EMAIL=noreply@magictoolbox.com
# ADMIN_EMAIL=admin@magictoolbox.com

# Tool-specific API keys (add as needed)
# TOOL_SOME_API_KEY=your-api-key
